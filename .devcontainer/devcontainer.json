{
  "name": "Chisel Development",
  "dockerFile": "Dockerfile",
  "remoteUser": "vscode",
  "updateRemoteUserUID": true,
  "customizations": {
    "vscode": {
      "settings": {
        "remote.autoForwardPorts": false,
      },
      "extensions": [
        "mshr-h.veriloghdl",
        "bat67.markdown-extension-pack",
        "eamodio.gitlens",
        "ms-vscode-remote.remote-ssh",
        "streetsidesoftware.code-spell-checker",
        "xyz.local-history",
        "pomdtr.markdown-kroki",
        "DavidAnson.vscode-markdownlint",
        "kamyar.firrtl",
        "aaronduino.chisel",
        "scala-lang.scala",
        "wavetrace.wavetrace",
        "teros-technology.teroshdl"
      ]
    }
  }
}